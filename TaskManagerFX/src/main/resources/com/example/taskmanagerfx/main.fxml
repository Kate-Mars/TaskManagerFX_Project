<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.shape.Circle?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.taskmanagerfx.controllers.MainController"
      spacing="0" stylesheets="@halloween.css"
      prefWidth="1920" prefHeight="1080"
      style="-fx-background-color: linear-gradient(to bottom, #2F2F2F, #1A1A1A);">

    <!-- Header -->
    <HBox style="-fx-padding: 25 40 25 40; -fx-background-color: linear-gradient(to right, #2F2F2F, #1A1A1A);"
          alignment="CENTER">
        <HBox spacing="20" alignment="CENTER_LEFT">
            <StackPane>
                <Circle radius="25" fill="linear-gradient(to bottom, #FF7518, #E65C00)"
                        opacity="0.9"/>
                <Label text="📝" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            </StackPane>
            <VBox spacing="5">
                <Label fx:id="welcomeLabel" text="Добро пожаловать!"
                       style="-fx-text-fill: #FF8C00; -fx-font-size: 32px; -fx-font-weight: 900;
                              -fx-font-family: 'Segoe UI', Arial, sans-serif;
                              -fx-effect: dropshadow(gaussian, rgba(255, 117, 24, 0.4), 8, 0.3, 2, 2);"/>
                <Label text="Управляйте своими задачами"
                       style="-fx-text-fill: #FFA500; -fx-font-size: 18px; -fx-font-weight: 600;
                              -fx-font-family: 'Segoe UI', Arial, sans-serif; -fx-opacity: 0.9;"/>
            </VBox>
        </HBox>

        <Region HBox.hgrow="ALWAYS"/>

        <HBox spacing="15" alignment="CENTER_RIGHT">
            <Button text="Выйти" onAction="#handleLogout" styleClass="exit"
                    style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
        </HBox>
    </HBox>

    <!-- Main Content -->
    <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-border-width: 0;"
                VBox.vgrow="ALWAYS">
        <VBox spacing="30" style="-fx-padding: 30;" prefWidth="1400">

            <!-- Add Task Card -->
            <VBox styleClass="card-primary">
                <Label text="Новая задача"
                       style="-fx-text-fill: #FF8C00; -fx-font-size: 24px; -fx-font-weight: 800;
                              -fx-padding: 0 0 25 0; -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>

                <VBox spacing="25">
                    <!-- Title and Date Row -->
                    <HBox spacing="25" alignment="CENTER_LEFT">
                        <!-- Название -->
                        <VBox spacing="12" HBox.hgrow="ALWAYS">
                            <Label text="Название"
                                   style="-fx-text-fill: #FFA500; -fx-font-size: 18px; -fx-font-weight: 700;"/>
                            <TextField fx:id="titleField" promptText="Что нужно сделать?"
                                       styleClass="text-field-large"/>
                        </VBox>

                        <!-- Date -->
                        <VBox spacing="12">
                            <Label text="Дата"
                                   style="-fx-text-fill: #FFA500; -fx-font-size: 18px; -fx-font-weight: 700;"/>
                            <DatePicker fx:id="datePicker" styleClass="date-picker-large"/>
                        </VBox>

                        <!-- Time -->
                        <VBox spacing="12">
                            <Label text="Время"
                                   style="-fx-text-fill: #FFA500; -fx-font-size: 18px; -fx-font-weight: 700;"/>
                            <HBox spacing="8" alignment="CENTER_LEFT">
                                <ComboBox fx:id="hourComboBox" promptText="Час"
                                          style="-fx-pref-width: 120; -fx-pref-height: 50; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                                <Label text=":" style="-fx-text-fill: #FF8C00; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 5 0 5;"/>
                                <ComboBox fx:id="minuteComboBox" promptText="Мин"
                                          style="-fx-pref-width: 120; -fx-pref-height: 50; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                            </HBox>
                        </VBox>
                    </HBox>

                    <!-- Description -->
                    <VBox spacing="12">
                        <Label text="Описание"
                               style="-fx-text-fill: #FFA500; -fx-font-size: 18px; -fx-font-weight: 700;"/>
                        <TextArea fx:id="descriptionField" promptText="Детали Вашей задачи..."
                                  styleClass="text-area-large"/>
                    </VBox>

                    <!-- Priority and Buttons -->
                    <HBox spacing="25" alignment="CENTER_LEFT">
                        <VBox spacing="12">
                            <Label text="Приоритет"
                                   style="-fx-text-fill: #FFA500; -fx-font-size: 18px; -fx-font-weight: 700;"/>
                            <ComboBox fx:id="priorityComboBox" styleClass="combo-priority"/>
                        </VBox>

                        <Region HBox.hgrow="ALWAYS"/>

                        <HBox spacing="15" alignment="CENTER_RIGHT">
                            <Button text="Удалить" onAction="#handleDeleteTask" styleClass="delete"/>
                            <Button text="Редактировать" onAction="#handleEditTask" styleClass="edit"/>
                            <Button text="Добавить" onAction="#handleAddTask" styleClass="add"/>
                        </HBox>
                    </HBox>
                </VBox>
            </VBox>

            <!-- Search and Sort Cards -->
            <HBox spacing="25" alignment="CENTER_LEFT">
                <!-- Search Card -->
                <VBox styleClass="card-purple" HBox.hgrow="ALWAYS">
                    <Label text="Поиск задач"
                           style="-fx-text-fill: #DA70D6; -fx-font-size: 22px; -fx-font-weight: 800;
                                  -fx-padding: 0 0 20 0; -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>

                    <VBox spacing="20">
                        <TextField fx:id="searchField" promptText="Введите запрос для поиска..."
                                   styleClass="text-field-large"/>

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <ComboBox fx:id="searchTypeComboBox" styleClass="combo-search"/>
                            <Button text="Найти" onAction="#handleSearch" styleClass="search"/>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Sort Card -->
                <VBox styleClass="card-green" HBox.hgrow="ALWAYS">
                    <Label text="Сортировка"
                           style="-fx-text-fill: #32CD32; -fx-font-size: 22px; -fx-font-weight: 800;
                                  -fx-padding: 0 0 20 0; -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>

                    <VBox spacing="20">
                        <ComboBox fx:id="sortComboBox" styleClass="combo-sort"/>
                        <Button text="Применить" onAction="#handleSort" styleClass="sort"/>
                    </VBox>
                </VBox>
            </HBox>

            <!-- Tasks Table -->
            <VBox>
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <StackPane>
                            <Circle radius="20" fill="linear-gradient(to bottom, #FF7518, #E65C00)"/>
                            <Label text="📋" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
                        </StackPane>
                        <Label text="Мои задачи"
                               style="-fx-text-fill: #FF8C00; -fx-font-size: 24px; -fx-font-weight: 800;
                          -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>
                    </HBox>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="taskCountLabel" text="0 задач"
                           style="-fx-text-fill: #FFA500; -fx-font-size: 18px; -fx-font-weight: 700;
                      -fx-background-color: rgba(255, 117, 24, 0.2); -fx-background-radius: 15;
                      -fx-padding: 8 16 8 16;"/>
                </HBox>

                <TableView fx:id="tasksTable" style="-fx-padding: 25 0 0 0; -fx-font-size: 16px;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="titleColumn" text="Задача" prefWidth="350" styleClass="bold-column"/>
                        <TableColumn fx:id="descriptionColumn" text="Описание" prefWidth="500"/>
                        <TableColumn fx:id="dateColumn" text="Срок" prefWidth="250"/>
                        <TableColumn fx:id="priorityColumn" text="Приоритет" prefWidth="200"/>
                        <TableColumn fx:id="deadlineColumn" text="Статус" prefWidth="250"/>
                    </columns>
                    <placeholder>
                        <VBox alignment="CENTER" spacing="25" style="-fx-padding: 80;">
                            <StackPane>
                                <Circle radius="50" fill="radial-gradient(center 50% 50%, radius 80%, #FF7518, #8B008B)"
                                        opacity="0.8"/>
                                <Label text="🎃" style="-fx-text-fill: white; -fx-font-size: 48px;"/>
                            </StackPane>
                            <Label text="Задач пока нет"
                                   style="-fx-text-fill: #FF8C00; -fx-font-size: 28px; -fx-font-weight: 800;
                              -fx-font-family: 'Segoe UI', Arial, sans-serif;"/>
                            <Label text="Добавьте свою первую задачу выше"
                                   style="-fx-text-fill: #FFA500; -fx-font-size: 20px; -fx-font-weight: 600;"/>
                        </VBox>
                    </placeholder>
                </TableView>
            </VBox>
        </VBox>
    </ScrollPane>
</VBox>